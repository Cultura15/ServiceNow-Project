        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
    gs.info("]]>ðŸ§¹<![CDATA[ Cleaning up cart links for deleted order: " + current.number);

    var cart = new GlideRecord("x_1607167_pet_shop_pet_shop_cart");
    cart.addQuery("parent_order", current.getUniqueValue());
    cart.query();

    var cleaned = 0;
    while (cart.next()) {
        cart.parent_order = "";
        cart.order_linked = false;
        cart.ordered = false; // optional: makes them reusable if needed
        cart.active = true;   // optional: reactivate cart item if you want
        cart.update();
        cleaned++;
    }

    gs.info("âœ… Cleaned up " + cleaned + " cart items for deleted order " + current.number);
})(current, previous);
]]></script>
