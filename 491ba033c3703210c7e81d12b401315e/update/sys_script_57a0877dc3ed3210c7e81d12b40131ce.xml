        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
    if (current.state.changesTo('3')) { // Closed Complete
        // Insert notification record
        var notifGR = new GlideRecord('x_1607167_pet_shop_user_notification');
        notifGR.initialize();
        notifGR.u_user = current.order_for;
        notifGR.u_message = 'Your order ' + current.number + ' is complete!';
        notifGR.u_read = false;
        notifGR.u_order = current.sys_id;
        notifGR.insert();

        // Fire the event for SPA listeners
        gs.eventQueue('x_1607167_pet_shop.order_complete', current, current.order_for, current.number);
    }
})(current, previous);
]]></script>
